<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTaskHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Header"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextTaskText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTaskHeader"
        android:hint="Text"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonSetDate"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editTextTaskText" />

    <Button
        android:id="@+id/buttonSetIcon"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTaskText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonSetTime"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTaskText" />

    <Button
        android:id="@+id/buttonCreate"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSetIcon"
        android:layout_centerHorizontal="true"
        android:text="Create" />

</RelativeLayout>